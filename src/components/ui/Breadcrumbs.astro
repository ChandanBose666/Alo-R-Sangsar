---
interface Props {
  items: { label: string; href?: string }[];
}

const { items } = Astro.props;
---

<nav
  class="flex text-xs text-gray-400 mb-8 uppercase tracking-widest items-center"
>
  {
    items.map((item, index) => (
      <>
        {item.href ? (
          <a href={item.href} class="hover:text-black transition-colors">
            {item.label}
          </a>
        ) : (
          <span class="text-gray-900 font-bold">{item.label}</span>
        )}
        {index < items.length - 1 && (
          <svg
            class="w-3 h-3 mx-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"
            />
          </svg>
        )}
      </>
    ))
  }
</nav>
