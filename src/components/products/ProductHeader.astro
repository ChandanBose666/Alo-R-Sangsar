---
interface Props {
  title: string;
  price: number;
  originalPrice: number;
  discount: string;
  reviewsCount: number;
}

const { title, price, originalPrice, discount, reviewsCount } = Astro.props;
---

<div class="mb-6">
  <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4 leading-tight">
    {title}
  </h1>

  <div class="flex items-center gap-4 mb-6">
    <div class="flex items-center">
      {
        [...Array(5)].map(() => (
          <svg class="w-4 h-4 text-green-500 fill-current" viewBox="0 0 20 20">
            <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z" />
          </svg>
        ))
      }
    </div>
    <a
      href="#reviews"
      class="text-sm text-gray-500 hover:text-black underline underline-offset-4"
    >
      {reviewsCount} reviews
    </a>
  </div>

  <div class="space-y-2 mb-8">
    <div class="flex items-baseline gap-4">
      <span class="text-4xl font-bold text-gray-900">₹{price.toFixed(2)}</span>
      <span class="text-xl text-gray-400 line-through"
        >₹{originalPrice.toFixed(2)}</span
      >
    </div>
    <p
      class="text-red-600 font-bold bg-red-50 inline-block px-3 py-1 rounded text-sm capitalize"
    >
      Save ₹{(originalPrice - price).toFixed(2)} ({discount})
    </p>
  </div>
</div>
